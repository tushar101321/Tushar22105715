            Console.WriteLine("1. message post");
            Console.WriteLine("2. photo post");
            Console.WriteLine("3. Display all posts");

            Console.WriteLine("Please Enter any number");
            string choice = Console.ReadLine();
            if (choice == "1")
            {
                postMessage();
            }
            else if (choice == "2")
